<view>
<form bindsubmit="formSubmit" bindreset="formReset">
  <!-- 单选 -->
  <view class='box'>
    <view class='box_title'>1.这是问题的内容</view>
    <view class='box_list'>
      <radio-group class="radio-group" bindchange="radioChange">
        <label class="radio" wx:for="{{items}}">
          <radio value="{{item.name}}" checked="{{item.checked}}"> {{item.value}}</radio>
        </label>
      </radio-group>
    </view>
  </view>

  <!-- 多选 -->
  <view class='box'>
    <view class='box_title'>
    1.这是问题的内容
    <text class='mose'>(可多选)</text>
    </view>
    <view class='box_list'>
     <checkbox-group bindchange="checkboxChange">
  <label class="checkbox" wx:for="{{items}}">
    <checkbox value="{{item.name}}" checked="{{item.checked}}">{{item.value}}</checkbox>
  </label>
</checkbox-group>
    </view>
  </view>
   <!-- 按钮 -->
   <button class='edit'  form-type="submit">提交</button>
  </form>
</view>